{% include 'partials/header.twig' %}


<h1>Products:</h1>


<form action="/product/index" method="get">
    <label for="name">Search by products name</label>
    <input type="text" name="name" id="name">
    <input type="submit">
</form>
<br>

<form action="/product/index" method="get">
    Search by category:
    <select id="category" name="category">
        <option value="" selected>{{ currentCategory |capitalize }}</option>
        {% for category in categories %}
            <option value="{{ category.getCategory }}">{{ category.getCategory|capitalize }}</option>
        {%  endfor %}
    </select>
    <input type="submit">
</form>

<form action="/product/index" method="get">
    Search by tag:
    <select id="tag" name="tag">
        <option value="" selected>{{ currentTag |capitalize }}</option>
        {% for tag in tags %}
            <option value="{{ tag.getTag }}">{{ tag.getTag|capitalize }}</option>
        {%  endfor %}
    </select>
    <input type="submit">
</form>


<ul>
{% for product in products %}

    <li><a href="/product/details/{{ product.getId }}">{{ product.getName|capitalize }}</a>, {{ product.getPrice / 100 }}$, ({{ product.getQuantity }} in stock)</li>

{% endfor %}
</ul>


{% include 'partials/footer.twig' %}
